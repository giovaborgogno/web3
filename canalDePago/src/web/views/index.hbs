<section class="container">
    <h1>{{title}}</h1>
    <form action="/" method="POST">
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Beneficiario</label>
            <input type="text" class="form-control" name="recipient" id="beneficiario" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Cantidad de WEIS</label>
            <input type="number" class="form-control" name="amount" id="cantweis">
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Numero de recibo</label>
            <input type="number" class="form-control" name="nonce" id="recibo">
        </div>

        <input type="hidden" name="defaultAccount" id="defaultAccount" val="">
        <button type="submit" class="btn btn-primary">Siguiente</button>
    </form>
    <p class="row" id="addressUsed"></p>
</section>